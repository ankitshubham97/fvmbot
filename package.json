{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc && cd docs && yarn install && yarn build",
    "dev": "cross-env NODE_ENV=development nodemon",
    "gendoc": "openapi-comment-parser src docs/openapi.json",
    "fixlint": "eslint -c package.json 'src/**/*.ts' --fix",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tool": "cross-env NODE_ENV=development ts-node src/tools/sendApiReq.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        1,
        "always",
        [
          "build",
          "chore",
          "docs",
          "feat",
          "fix",
          "lint",
          "refactor",
          "revert",
          "type"
        ]
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "sort-imports": [
        "error",
        {
          "ignoreCase": true,
          "ignoreDeclarationSort": true
        }
      ],
      "@typescript-eslint/ban-ts-comment": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "@typescript-eslint/no-non-null-assertion": 0,
      "@typescript-eslint/no-unused-vars": [
        1,
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "axios": "^0.27.2",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.22.3",
    "sequelize-typescript": "^1.0.0-beta.3",
    "winston": "^3.7.2",
    "winston-discord-transport": "^1.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.13",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.7.16",
    "@types/pg": "^8.6.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "concurrently": "^7.3.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.19",
    "openapi-comment-parser": "^1.0.0",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
  }
}
